# =============================================================================
# Lera AI - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# API Server
# -----------------------------------------------------------------------------
PORT=3001
NODE_ENV=development

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 64
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# -----------------------------------------------------------------------------
# MongoDB Atlas
# -----------------------------------------------------------------------------
# Connection string from MongoDB Atlas dashboard
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/lera-ai?retryWrites=true&w=majority

# Field-Level Encryption Master Key (base64 encoded, 96 bytes)
# Generate with: openssl rand -base64 96
MONGODB_ENCRYPTION_KEY=your-encryption-key-here

# -----------------------------------------------------------------------------
# iManage Integration
# -----------------------------------------------------------------------------
IMANAGE_CLIENT_ID=your-imanage-client-id
IMANAGE_CLIENT_SECRET=your-imanage-client-secret
IMANAGE_BASE_URL=https://your-imanage-instance.com
IMANAGE_REDIRECT_URI=http://localhost:3001/api/imanage/callback

# -----------------------------------------------------------------------------
# Anthropic Claude API
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# -----------------------------------------------------------------------------
# Frontend
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:3001
VITE_APP_NAME=Lera AI

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=debug
LOG_FORMAT=pretty

# -----------------------------------------------------------------------------
# Optional: Email (for MFA)
# -----------------------------------------------------------------------------
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@lera.ai
